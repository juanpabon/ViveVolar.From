@model DataPaginador<InputModelRegister>
@{
    ViewData["Title"] = "Vuelos";
}
<div class="container p-4">
    <div class="row">
        <div class="form-group">
            <form asp-area="Vuelos" asp-controller="Vuelos" asp-action="Vuelos" method="get">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="text" id="filtrar" name="filtrar" placeholder="Buscar" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <input type="submit" value="Buscar" class="btn btn-success">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model.List)
        {
            <div class="col-xs-6 col-md-2">
                <div class="card text-center">
                    <div class="card-header ">
                        <a asp-route-id="@item.Id" asp-area="Vuelos" asp-page="/Account/Details">
                            <img class='imageUsers' src="~/images/vuelo.png" />
                        </a>
                    </div>
                    <div class="card-body text-center">
                        <div class="col-md-10">
                            <div class="row">
                                <p> @Html.DisplayFor(modelItem => item.FechaSalida)</p>
                            </div>
                            <div class="row">
                                <p>@Html.DisplayFor(modelItem => item.CiudadOrigen)</p>
                            </div>
                            <div class="row">
                                <p>@Html.DisplayFor(modelItem => item.CiudadDestino)</p>
                            </div>
                            <div class="row">
                                <a class="btn btn-success " asp-route-id="@item.Id" asp-area="Vuelos" asp-page="/Details">
                                    Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="text-center">
    Resultados @Html.Raw(Model.Pagi_info)
    <br />
    @Html.Raw(Model.Pagi_navegacion)
</div>
