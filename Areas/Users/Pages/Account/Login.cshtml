@page "/Users/Login"
@model LoginModel
@{
}
@{
    ViewData["Title"] = "Login";
}
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Login</h3>
                </div>
                <img src="~/images/logo.png" class="mx-auto w-25">
                <div class="card-body">
                    <form method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <input asp-for="Input.Login" placeholder="Login" class="form-control" autofocus />
                            <span asp-validation-for="Input.Login" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" placeholder="Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <span class="text-danger">
                                @Html.DisplayFor(m => m.Input.ErrorMessage)
                            </span>
                        </div>
                        <button class="btn btn-primary btn-block">
                            Ingresar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}